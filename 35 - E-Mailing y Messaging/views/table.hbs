
<div class="jumbotron tabla">
    <h1>Vista de Productos</h1>
    <br>
    
    {{#if hayProductos}} 
        <div class="table-responsive">
            <table class="table table-dark">
                <tr><th>ID</th><th>Actualizado</th><th>Nombre</th><th>Descripcion</th><th>Codigo</th><th>Foto</th><th>Precio</th><th>Stock</th></tr>
                {{#each productos}}
                    <tr><td>{{this.id}}</td><td>{{this.timeStamp}}</td><td>{{this.title}}</td><td>{{this.descripcion}}</td><td>{{this.codigo}}</td><td><img width="50" src={{this.thumbnail}} alt="not found"></td><td>${{this.price}}</td><td>{{this.stock}}</td></tr>
                {{/each}}
            </table>
        </div>
    {{else}}  
        <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}
</div>